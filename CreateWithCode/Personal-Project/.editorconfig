# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Defaults
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python max line length is 80 chars
[*.py]
max_line_length = 80

# JS, JSON, HTML/MD, and YAML standard is 2 spaces
[*.{js,json,md,yml,yaml}]
indent_size = 2

[*.js]
max_line_length = 100

[*.bat]
end_of_line = crlf

[*.cs]
csharp_style_implicit_object_creation_when_type_is_apparent = false
